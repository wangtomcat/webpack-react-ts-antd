{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "esnext",
    "removeComments": true,
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "ROOT/*":["./src/*"]
    },
  },
  "exclude": [
    "node_modules"
  ]
}